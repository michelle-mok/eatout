<%- include ('partials/head') %>

<div class="container">
  <form action="/choose" method="POST">
    <div class="row mb-3">
      <label for="id" class="col-sm-2 col-form-label">Friend 1</label>
      <div class="col-sm-10">
        <select class="form-select" name="id">
          <option selected>Select friend </option>
          <% friendDetailsArray.forEach((friend) => { %>
          <option value="<%=friend.friend_id%>"><%= friend.first_name %>, <%= friend.last_name %></option>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="row mb-3">
      <label for="id" class="col-sm-2 col-form-label">Friend 2</label>
      <div class="col-sm-10">
        <select class="form-select" name="id">
          <option selected>Select friend </option>
          <% friendDetailsArray.forEach((friend) => { %>
          <option value="<%=friend.friend_id%>"><%= friend.first_name %>, <%= friend.last_name %></option>
          <% }) %>
        </select>
      </div>
    </div>
<div class="row mb-3">
      <label for="id" class="col-sm-2 col-form-label">Friend 3</label>
      <div class="col-sm-10">
        <select class="form-select" name="id">
          <option selected>Select friend </option>
          <% friendDetailsArray.forEach((friend) => { %>
          <option value="<%=friend.friend_id%>"><%= friend.first_name %>, <%= friend.last_name %></option>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="row mb-3">
      <label for="location" class="col-sm-2 col-form-label">Location</label>
      <div class="col-sm-10">
        <select class="form-select" name="location">
          <option selected>Choose location </option>
          <% locations.forEach((location) => { %>
            <option value="<%= location.id %>"><%= location.name %></option>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="row mb-3">
      <label for="budget" class="col-sm-2 col-form-label">Budget</label>
      <div class="col-sm-10">
        <select class="form-select" name="budget">
          <option selected>Choose budget </option>
          <% budgets.forEach((budget) => { %>
            <option value="<%= budget.id %>"><%= budget.amount %></option>
          <% }) %>
        </select>
      </div>
    </div>
    <button class="btn btn-outline-info" type="submit">Let's go!</button>
  </form>
</div>