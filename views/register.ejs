<%- include ('partials/head') %>

<div class="container">
  <h2 style="font-weight: 200">Register !</h2>
  <form action="/register" method="POST">
    <div class="row mb-3">
      <label for="first_name" class="col-sm-2 col-form-label">First name </label>
      <div class="col-sm-10">
      <input type="text" class="form-control" id="first_name" name="first_name">
      </div>
    </div>
    <div class="row mb-3">
      <label for="last_name" class="col-sm-2 col-form-label">Last name </label>
      <div class="col-sm-10">
      <input type="text" class="form-control" id="last_name" name="last_name">
    </div>
    </div>
    <div class="row mb-3">
      <label for="email" class="col-sm-2 col-form-label">Email </label>
      <div class="col-sm-10">
      <input type="email" class="form-control" id="email" name="email">
      </div>
    </div>
    <div class="row mb-3">
      <label for="password" class="col-sm-2 col-form-label">Password </label>
      <div class="col-sm-10">
      <input type="password" class="form-control" id="password" name="password">
    </div>
    </div>
    <div class="form-check form-switch">
  <input class="form-check-input" type="checkbox" name="vegetarian" value="yes">
  <label class="form-check-label" for="vegetarian">Vegetarian</label>
</div>
<div class="form-check form-switch">
  <input class="form-check-input" type="checkbox" name="halal" value="yes">
  <label class="form-check-label" for="halal">Halal</label>
</div>
    <div class="row mb-3">
      <label for="cuisines" class="col-sm-2 col-form-label">Cuisines </label>
      <div class="col-sm-10">
        <% cuisineTypes.forEach((cuisine)=> { %>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="cuisine" value="<%= cuisine.id %>">
            <label class="form-check-label" for="cuisine">
            <%= cuisine.name %>
            </label>
          </div>
        <% }) %>
      </div>
    </div>
    <button class="btn btn-outline-info" type="submit">Register</button>
  </form>
</div>

<%- include ('partials/footer') %>