<%- include ('partials/head') %>

<div class="container edit-form">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 col-md-10">
      <h2>Edit form</h2>
      <p>Want to change something?</p>

      <form class="entry-form-container" action="/edit?_method=PUT" method="POST">
        <% allCuisinesNames.forEach((cuisine) => { %>
        <div class="form-check form-check-inline">
        <% if (userCuisineNames.includes(cuisine)) { %>
        <input class="form-check-input" type="checkbox" name="cuisine_name" value="<%= cuisine %>" id="cuisine_name" checked>
        <% } else { %>
        <input class="form-check-input" type="checkbox" name="cuisine_name" value="<%= cuisine %>" id="cuisine_name">
        <% } %>
        <label class="form-check-label" for="cuisine_name">
        <%= cuisine %>
        </label>
        </div>
        <% }) %>
    </div>
  </div> 

  <div class="row">
    <div class="col">
      <div class="form-group">
        <label for="first_name">First name </label>
        <input class="form-control" name="first_name" value="<%= userDetails.first_name %>">
      </div>
    </div>
  </div>

    <div class="row">
      <div class="col">
        <div class="form-group">
          <label for="last_name">Last name </label>
          <input class="form-control" name="last_name" value="<%= userDetails.last_name %>">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="form-group">
          <label for="email">Email </label>
          <input class="form-control" name="email" value="<%= userDetails.email %>">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="form-group">
          <label for="phone_number">Phone number </label>
          <input class="form-control" name="phone_number" value="<%= userDetails.phone_number %>">
        </div>
      </div>
    </div>

    <br><br>
    <button type="submit" class="btn btn-secondary btn-block">Submit</button>
    </form>
  </div>

<%- include ('partials/footer') %>